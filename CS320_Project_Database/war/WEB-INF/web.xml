<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>IndexServlet</servlet-name>
    <servlet-class>project_database.servlet.IndexServlet</servlet-class>
  </servlet>
  
    <servlet>
    <servlet-name>HomeServlet</servlet-name>
    <servlet-class>project_database.servlet.HomeServlet</servlet-class>
  </servlet>
  
   <servlet>
    <servlet-name>AboutServlet</servlet-name>
    <servlet-class>project_database.servlet.AboutServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>CreateServlet</servlet-name>
    <servlet-class>project_database.servlet.CreateServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>ProfileServlet</servlet-name>
    <servlet-class>project_database.servlet.ProfileServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>EditProfileServlet</servlet-name>
    <servlet-class>project_database.servlet.EditProfileServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>project_database.servlet.LoginServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>project_database.servlet.LogoutServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>RegisterServlet</servlet-name>
    <servlet-class>project_database.servlet.RegisterServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>PostServlet</servlet-name>
  	<servlet-class>project_database.servlet.PostServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>EditPostServlet</servlet-name>
  	<servlet-class>project_database.servlet.EditPostServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>DeletePostServlet</servlet-name>
  	<servlet-class>project_database.servlet.DeletePostServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>DeleteUserServlet</servlet-name>
  	<servlet-class>project_database.servlet.DeleteUserServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>SearchServlet</servlet-name>
  	<servlet-class>project_database.servlet.SearchServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>SortServlet</servlet-name>
  	<servlet-class>project_database.servlet.SortServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>UploadImageServlet</servlet-name>
  	<servlet-class>project_database.servlet.UploadImageServlet</servlet-class>
  </servlet>



  <!-- Servlet mappings -->
  <servlet-mapping>
    <servlet-name>IndexServlet</servlet-name>
    <url-pattern>/index</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>HomeServlet</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>AboutServlet</servlet-name>
    <url-pattern>/about</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>CreateServlet</servlet-name>
    <url-pattern>/create</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>ProfileServlet</servlet-name>
    <url-pattern>/profile</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>EditProfileServlet</servlet-name>
    <url-pattern>/editProfile</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>RegisterServlet</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
   
  <servlet-mapping>
  	<servlet-name>PostServlet</servlet-name>
  	<url-pattern>/post</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>EditPostServlet</servlet-name>
  	<url-pattern>/editPost</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>DeletePostServlet</servlet-name>
  	<url-pattern>/deletePost</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>DeleteUserServlet</servlet-name>
  	<url-pattern>/deleteUser</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>SearchServlet</servlet-name>
  	<url-pattern>/search</url-pattern>
  </servlet-mapping>
  
    <servlet-mapping>
  	<servlet-name>SortServlet</servlet-name>
  	<url-pattern>/sort</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>UploadImageServlet</servlet-name>
  	<url-pattern>/uploadImage</url-pattern>
  </servlet-mapping>
  
</web-app>